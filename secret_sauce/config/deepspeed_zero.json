{
  "train_batch_size": 16,
  "wall_clock_breakdown": false,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.001,
      "betas": [0.9, 0.999],
      "eps": 1e-8
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 3e-8,
      "warmup_max_lr": 2.2e-4,
      "warmup_num_steps": 100
    }
  },
  "gradient_clipping": 1.0,

  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "initial_scale_power": 8,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },

  "flops_profiler": {
    "enabled": false,
    "profile_step": 5,
    "module_depth": -1,
    "top_modules": 10,
    "detailed": true
  },
  

  "zero_optimization": {
    "stage": 2,
    "cpu_offload": true,
    "contiguous_gradients": false,
    "overlap_comm": true
  },
  "activation_checkpointing": {
    "partition_activations": true,
    "cpu_checkpointing": true,
    "profile": false
  }
}
